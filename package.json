{
  "name": "meow-dl",
  "version": "1.0.0",
  "description": "Meow DL - YouTube downloader frontend and Bun/Elysia proxy",
  "private": true,
  "main": "api/index.ts",
  "scripts": {
    "build": "esbuild scripts/downloader.ts --bundle --minify --outfile=public/assets/downloader.js --platform=browser --target=es2022",
    "dev": "bun run build && bun --watch api/index.ts",
    "start": "bun run build && bun api/index.ts"
  },
  "dependencies": {
    "elysia": "^1.4.5",
    "animejs": "^4.1.3",
    "fuse.js": "^7.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.9"
  }
}